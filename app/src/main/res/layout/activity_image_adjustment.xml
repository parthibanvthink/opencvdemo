<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageAdjustmentActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:gravity="center_horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/selectedImageView"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_marginTop="30dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="#EEEEEE"
                android:layout_marginBottom="30dp"
                android:visibility="gone"/>
            <Button
                android:id="@+id/pick_gallery_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Image" />
            <TextView android:text="Brightness"   android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:id="@+id/brightnessSlider"
                android:max="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/brightnessValueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brightness: " />
            <TextView android:text="Sharpness"   android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:id="@+id/sharpnessSlider"
                android:max="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/sharpnessValueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sharpness: " />
            <TextView android:text="Contrast"   android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:id="@+id/contrastSlider"
                android:max="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/contrastValueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contrast: " />

            <Button
                android:id="@+id/apply_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply" />
            <ImageView
                android:id="@+id/adjustView"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_marginTop="30dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="#EEEEEE"
                android:layout_marginBottom="30dp"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>