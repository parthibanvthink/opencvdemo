<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#4CAF50"
            android:title="App Header"
            android:titleTextColor="@android:color/white"
            android:textSize="20sp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main" />
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/main_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="36dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="?attr/actionBarSize"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="16dp">
                <!-- Button -->
                <Button
                    android:id="@+id/pick_gallery_Image"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:text="@string/pick_Image"
                    android:textSize="18sp"
                    android:layout_marginEnd="15dp"/>
                <Button
                    android:id="@+id/open_Camera"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:text="@string/camera"
                    android:textSize="18sp"
                    android:layout_marginStart="15dp"/>
            </LinearLayout>

            <!-- ImageView -->
            <ImageView
                android:id="@+id/selected_image_view"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_marginTop="30dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="#EEEEEE"
                android:layout_marginBottom="30dp"
                android:visibility="gone" />

            <!-- Blur Detection Result -->
            <TextView
                android:id="@+id/Image_bright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Blur value will appear here"
                android:textSize="20sp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/blur_result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Blur value will appear here"
                android:textSize="20sp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/user_Message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Blur value will appear here"
                android:textSize="20sp"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_marginTop="30dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="#EEEEEE"
                android:layout_marginBottom="30dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/previewImage"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_marginTop="30dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="#EEEEEE"
                android:layout_marginBottom="30dp"
                android:visibility="gone"/>
            <TextView android:text="Brightness"   android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:id="@+id/brightnessSlider"
                android:max="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/brightnessValueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brightness: " />
            <TextView android:text="Sharpness"   android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:id="@+id/sharpnessSlider"
                android:max="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/sharpnessValueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sharpness: " />
            <TextView android:text="Contrast"   android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <SeekBar
                android:id="@+id/contrastSlider"
                android:max="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/contrastValueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contrast: " />
            <Button
                android:id="@+id/applyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply" />
        </LinearLayout>
       </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>